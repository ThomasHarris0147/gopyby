# Makefile for python interface for package golanghello.
# File is generated by gopy. Do not edit.
# gopy build -output=./golanghello golanghello

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/Users/thomasharris/work/gopyby-poc/.venv/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = "-I/opt/homebrew/opt/python@3.13/Frameworks/Python.framework/Versions/3.13/include/python3.13"
LDFLAGS = "-L/opt/homebrew/opt/python@3.13/Frameworks/Python.framework/Versions/3.13/lib" "-lpython3.13" -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make golanghello

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm golanghello.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w golanghello.go
	# generate golanghello_go$(LIBEXT) from golanghello.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o golanghello_go$(LIBEXT) golanghello.go
	# use pybindgen to build the golanghello.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _golanghello$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated golanghello.py python wrapper imports this c-code package
	
	$(GCC) golanghello.c -dynamiclib golanghello_go$(LIBEXT) -o _golanghello$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


